@model CategoryModel

<form method="post">
    <input asp-for="CategoeyID" hidden />
    <div class="border p-3 mt-4">
        <div class=" row pd-2">
            <h2 class=" text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class=" mb-3 row p-1">
            <label asp-for="CategoryName" class=" p-0"></label>
            <input asp-for="CategoryName" class=" form-control" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <div class=" mb-3 row p-1">
            <label asp-for="CategoryDescription" class=" p-0"></label>
            <input asp-for="CategoryDescription" class=" form-control" />
            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
        </div>
        <div class=" mb-3 row p-1">
            <label asp-for="DisplayOrder" class=" p-0"></label>
            <input asp-for="DisplayOrder" class=" form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class=" row">
            <div class=" col-6 col-md-3">
                <button type="submit" style="width:150px" class=" btn btn-primary form-control">Update</button>
            </div>
            <div class=" col-6 col-md-3">
                <a asp-action="Index" asp-controller="Category" class=" btn btn-secondary border form-control" style="width:150px">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

